    <record id="sale_order_line_view_search_fltr" model="ir.ui.view">
        <field name="name">sale.order.line.list.select.fltr</field>
        <field name="model">sale.order.line</field>
        <field name="arch" type="xml">
            <search string="Cerca Righe Ordine">
                <field name="name" string="Righe Ordine" filter_domain="[('name','ilike',self)]"/>
                <field name="order_partner_id" operator="child_of"/>
                <field name="salesman_id"/>
                <field name="product_id"/>
                <field name="isbn"/>
                <field name="order_data_uscita"/>
                <field name="order_in_magazzino"/>
                <filter string="Miei Ordini" domain="[('salesman_id','=',uid)]" name="my_sale_orders_filter"/>
                <!--domain="[('start_date','&gt;', (context_today() - datetime.timedelta(days=1)).strftime('%%Y-%%m-%%d') )]"-->
                <filter string="In libreria oggi" name="libreria_oggi"
                        domain="[('order_data_uscita', '&gt;', context_today().strftime('%Y-%m-%d 00:00:00')), ('date_order', '&lt;=', context_today().strftime('%Y-%m-%d 23:23:59'))]"/>
                <filter string="In magazzino oggi" name="magazzino_oggi"
                        domain="[('order_in_magazzino', '&gt;', context_today().strftime('%Y-%m-%d 00:00:00')), ('order_in_magazzino', '&lt;=', context_today().strftime('%Y-%m-%d 23:23:59'))]"/>
                
                <group expand="0" string="Group By">
                    <filter string="Commerciale" name="salesperson" domain="[]" context="{'group_by':'salesman_id'}"/>
                    <filter string="Spedizione" name="order" domain="[]" context="{'group_by':'order_id'}"/>
                    <filter name="customer" string="Cliente" domain="[]" context="{'group_by':'order_partner_id'}"/>
                    <filter string="Titolo" name="product" domain="[]" context="{'group_by':'product_id'}"/>
                    <filter string="In libreria" name="inlibreria" context="{'group_by':'order_data_uscita'}"/>
                    <filter string="In magazzino" name="inmagazzino" context="{'group_by':'order_in_magazzino'}"/>

                </group>
            </search>
        </field>
    </record>

