<?xml version="1.0"?>

<odoo>

        <record id="invio_libri_omaggio_wizard_view_form" model="ir.ui.view">
            <field name="name">invio.libri.omaggio.form</field>
            <field name="model">invio.libri.omaggio</field>
            <field name="arch" type="xml">
                <form string="Invio Libri">
                    <group>
                        <field name="total_selected"/>
                        <field name="partner_ids" />
                    </group>
                    <footer>
                        <button name="genera_step1" string="CONFERMA" type="object" class="oe_highlight" />
                        or
                        <button string="Cancel" class="oe_link" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>

        <act_window id="product_generate_order"
                    multi="True"
                    key2="client_action_multi"
                    name="Invio Libri"
                    res_model="invio.libri.omaggio"
                    src_model="product.template"
                    view_mode="form"
                    target="new"
                    view_type="form" />

        <record id="invio_libri_omaggio_wizard_view_form2" model="ir.ui.view">
            <field name="name">invio.libri.omaggio.form2</field>
            <field name="model">opzioni.libro.omaggio</field>
            <field name="arch" type="xml">
                <form string="Opzioni Invio Libri">
                    <field name="msg_qta_superata" style="color:red;font-weight:bold;"/>
                    <group>
                        <field name="product_id" />
                        <field name="invio_singolo" help="Se selezionato verrà generato un nuovo ordine di consegna anche se già presente un ordine in lavorazione con lo stesso partner"/>
                    </group>
                    
                    <field name="partner_ids" invisible="True"/>
                    <notebook>
                        <page string="Persone">
                            <field name="details_line" options="{'no_create': True}">
                                <tree editable="bottom">
                                <field name="partner_id" />
                                <field name="dedica" />
                                <field name="anticipo" />
                                <field name="urgenza" />
                                </tree>
                            </field>
                        </page>
                    </notebook>


                    <footer>
                        <button name="genera_step2" string="CONFERMA" type="object" class="oe_highlight" />
                        or
                        <button string="Cancel" class="oe_link" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>


        <record id="view_sales_order_line_filter" model="ir.ui.view">
            <field name="name">sale.order.line.list.select</field>
            <field name="model">sale.order.line</field>
            <field name="arch" type="xml">
                <search string="Search Sales Order">
                    <field name="name" string="Sales Order" filter_domain="['|',('name','ilike',self),('client_order_ref','ilike',self)]"/>
                    <field name="partner_id" operator="child_of"/>
                    <field name="product_id"/>
                    <separator/>
                    <filter string="Unread Messages" name="message_needaction" domain="[('message_needaction','=',True)]"/>
                    <group expand="0" string="Group By">
                        <filter name="customer" string="Customer" domain="[]" context="{'group_by':'partner_id'}"/>
                        <filter string="Order Month" domain="[]" context="{'group_by':'date_order'}"/>
                    </group>
               </search>
            </field>
        </record>

        <record id="options_order_wizard_view_tree" model="ir.ui.view">
            <field name="name">sale.order.tree</field>
            <field name="model">sale.order.line</field>
            <field name="priority">4</field>

            <field name="arch" type="xml">
                <tree string="Quotation" class="o_sale_order" decoration-bf="message_needaction==True" decoration-muted="state=='cancel'" editable="top">
                    <field name="message_needaction" invisible="1"/>
                    <field name="name_order" string="Quotation Number" readonly="True"/>
                    <field name="date_order" readonly="True"/>
                    <!--field name="lastname"/>
                    <field name="firstname"/-->
                    <field name="product_id" readonly="True"/>
                    <field name="isbn" readonly="True"/>
                    <field name="dedica"/>
                    <field name="urgenza"/>
                    <field name="anticipo"/>
                    <field name="state" readonly="True"/>
                </tree>
            </field>
        </record>

        <record id="action_quotations_options" model="ir.actions.act_window">
            <field name="name">Options</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">sale.order.line</field>
            <field name="view_id" ref="stampa.options_order_wizard_view_tree"/>
            <field name="view_mode">tree,kanban,form</field>
            <field name="search_view_id" ref="view_sales_order_line_filter"/>
            <field name="context">{'hide_sale': True}</field>
            <field name="domain">[('state','=','draft')]</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Create a Quotation, the first step of a new sale.
                </p>
                <p>
                    Your next actions should flow efficiently: confirm the Quotation
                    to a Sale Order, then create the Invoice and collect the Payment.
                </p>
                <p>
                    Note that once a Quotation becomes a Sale Order, it will be moved
                    from the Quotations list to the Sales Order list.
                </p>
            </field>
        </record>


        <record id="sale.action_quotations" model="ir.actions.act_window">
            <field name="domain">[('state','=','draft')]</field>
        </record>

        <menuitem id="menu_sale_options"
                  action="action_quotations_options"
                  parent="sales_team.menu_sales"
                  sequence="11" />

</odoo>
