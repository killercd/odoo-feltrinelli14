    <record id="product_template_form_view_fltr2" model="ir.ui.view">
        <field name="name">product.template.supplier.product_template_form_view.inherit.fltr</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
