    <record id="product_template_form_view_fltr3" model="ir.ui.view">
        <field name="name">product.template.common.form.fltr</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view" />
        <field eval="10" name="priority"/>
        <field name="arch" type="xml">

            <xpath expr="//group[@name='group_standard_price']" position="replace">
                <label for="list_price"/>
                <field name="list_price" string="Prezzo" widget='monetary' options="{'currency_field': 'currency_id', 'field_digits': True}"/>
                <label for="standard_price" groups="base.group_user" attrs="{'invisible': True}"/>
                <div name="standard_price_uom" groups="base.group_user" attrs="{'invisible': True}">
                    <field name="standard_price" widget='monetary' options="{'currency_field': 'cost_currency_id', 'field_digits': True}"/>
                </div>
                <field name="company_id" groups="base.group_multi_company"
                    options="{'no_create': True}"/>
                <field name="uom_id"  options="{'no_create': True}"/>
                <field name="uom_po_id"  options="{'no_create': True}"/>
                <field name="currency_id" invisible="1"/>
                <field name="product_variant_id" invisible="1"/>
            </xpath>

            <field name="type" position="attributes">
                <attribute name="attrs">{'invisible': True}</attribute>
            </field>

            <xpath expr="//div[@name='options']" position="attributes">
                <attribute name="attrs">{'invisible': True}</attribute>
            </xpath>
            <xpath expr="//field[@name='categ_id']" position="replace">
                <field name="collana_id" /> <!-- options="{'no_create_edit': True}" FIXME-->
                <field name="marchio_editoriale" />
                <field name="book_type" />
                <field name="data_uscita" />
                <field name="in_magazzino" />
                
                <!-- options="{'no_create_edit': True}" # commentati per test FIXME-->
                <field name="autori_id" widget="many2many_tags" placeholder="Autori..." />
                <field name="curatori_id" widget="many2many_tags" placeholder="Curatori..." />
                <field name="prefatori_id" widget="many2many_tags" placeholder="Prefatori..." />
                <field name="traduttori_id" widget="many2many_tags" placeholder="Traduttori..." />
                <field name="illustratori_id" widget="many2many_tags" placeholder="Illustratori..." />
                
                <field name="numero_pagine"/>
                <field name="categ_id"/>
                
            </xpath>
            <xpath expr="//page[@name='sales']" position="attributes">
                <attribute name="attrs">{'invisible': True}</attribute>
            </xpath>
            <xpath expr="//page[@name='invoicing']" position="attributes">
                <attribute name="attrs">{'invisible': True}</attribute>
            </xpath>
        </field>
    </record>

