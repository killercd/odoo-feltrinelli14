            </field>
        </field>
    </record>

    <record id="product_template_search_view_custom" model="ir.ui.view">
        <field name="name">product.template.search</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_search_view" />
        <field name="arch" type="xml">
            
            <xpath expr="//filter[@name='services']" position="replace"/>
            <xpath expr="//filter[@name='consumable']" position="replace"/>
            <xpath expr="//filter[@name='filter_to_sell']" position="replace"/>
            
            
            <xpath expr="//filter[@name='inactive']" position="replace"/>

            <xpath expr="//filter[@name='filter_to_purchase']" position="replace">
                <separator/>
                <filter string="In Magazzino" name="magazzino" domain="[]" context="{'group_by': 'in_magazzino', 'search_default_in_magazzino':1}"/>
                <filter string="In Libreria" name="libreria" domain="[]" context="{'group_by': 'data_uscita:day', 'search_default_data_uscita':1}"/>
            </xpath>
            <field name="pricelist_id" position="after">
                <separator/>
                <field name="collana_id" widget="selection"/>
                <field name="autori_id" widget="selection"/>
            </field>
            <field name="name" position="after">
                <field name="autori_id"/>
            </field>
        </field>
    </record>

    <record id="view_stock_product_template_tree_fltr" model="ir.ui.view">
        <field name="name">product.template.stock.tree.inherit.fltr</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="stock.view_stock_product_template_tree"/>
        <field name="arch" type="xml">
            <field name="responsible_id" position="attributes">
                <attribute name="invisible">True</attribute>
            </field>
        </field>
    </record>


    <record id="view_stampa_product_template_tree" model="ir.ui.view">
        <field name="name">product.template.stampa.tree.inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_tree_view"/>
        <field name="priority" eval="0"/>
        <field name="arch" type="xml">

            <field name="default_code" position="attributes">
                <attribute name="invisible">True</attribute>
            </field>
            <field name="name" position="attributes">
                <attribute name="string">Titolo</attribute>
            </field>

            <field name="name" position="before">
                <field name="marchio_editoriale"/>
                <field name="barcode" string="ISBN"/>
                <field name="book_type"/>
                <field name="data_uscita"/>
                <field name="in_magazzino"/>
                <field name="autori_id" widget="many2many_tags"/>
            </field>
            
            <field name="list_price" position="attributes">
                <attribute name="invisible">True</attribute>
            </field>
            <field name="standard_price" position="attributes">
                <attribute name="invisible">True</attribute>
            </field>
            <field name="uom_id" position="attributes">
                <attribute name="invisible">True</attribute>
            </field>
            <field name="categ_id" position="attributes">
                <attribute name="invisible">True</attribute>
            </field>
            <field name="type" position="attributes">
                <attribute name="invisible">True</attribute>
            </field>
        </field>
    </record>

        <record id="product.product_product_tree_view" model="ir.ui.view">
            <field name="name">product.product.tree</field>
            <field name="model">product.product</field>
            <field eval="7" name="priority"/>
            <field name="arch" type="xml">

                <tree string="Product Variants">
                    <field name="default_code"/>
                    <field name="barcode"/>
                    <field name="name"/>
                    <field name="data_uscita"/>
                    <field name="in_magazzino"/>
                    <field name="collana_id"/>
                    <!-- FIXME questo campo causa un'eccezione sul parsing field name="attribute_value_ids" widget="many2many_tags" groups="product.group_product_variant"/-->
                    <field name="lst_price" invisible="1"/>
                    <field name="price" invisible="not context.get('pricelist',False)"/>
                    <field name="uom_id" options="{'no_open': True, 'no_create': True}" />
                    <field name="product_tmpl_id" invisible="1"/>
                    <field name="active" invisible="1"/>
                    <field name="type"/> <!-- Added for this: Field type used in attrs.invisible ({'invisible':[('type', '!=', 'product')]}) must be present in view but is missing. -->

                </tree>
            </field>
        </record>

    <record id="sale.product_template_action" model="ir.actions.act_window">
        <field name="name">Products</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">product.template</field>
        <field name="view_mode">tree,form,activity</field>
        <field name="view_id" ref="product.product_template_kanban_view"/>
        <field name="search_view_id" ref="product.product_template_search_view"/>
        <field name="context">{"search_default_filter_to_sell":1, "sale_multi_pricelist_product_template": 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new product
            </p><p>
                You must define a product for everything you sell or purchase,
                whether it's a storable product, a consumable or a service.
            </p>
        </field>
    </record>


