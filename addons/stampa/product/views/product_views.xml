    <record id="product_template_form_view" model="ir.ui.view">
            <field name="name">product.template.common.form</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view" />
            <field name="arch" type="xml">

                <xpath expr="//group[@name='group_standard_price']" position="replace">
                    <field name="list_price" string="Prezzo" widget='monetary' options="{'currency_field': 'currency_id', 'field_digits': True}"/>
                    <label for="standard_price" groups="base.group_user" attrs="{'invisible': True}"/>
                    <div name="standard_price_uom" groups="base.group_user" attrs="{'invisible': True}">
                        <field name="standard_price" widget='monetary' options="{'currency_field': 'cost_currency_id', 'field_digits': True}"/>
                    </div>
                    <field name="company_id" groups="base.group_multi_company"
                        options="{'no_create': True}"/>
                    <field name="uom_id" groups="product.group_uom" options="{'no_create': True}"/>
                    <field name="uom_po_id" groups="product.group_uom" options="{'no_create': True}"/>
                    <field name="currency_id" invisible="1"/>
                    <field name="product_variant_id" invisible="1"/>
                </xpath>

                <field name="type" position="attributes">
                    <attribute name="attrs">{'invisible': True}</attribute>
                </field>

                <!-- TODO nascondimento descrizione per picking > dÃ  errore-->

                <!-- <xpath expr="//page[@name='notes']" position="replace">
                    <group string="Description" attrs="{'invisible': [('sale_ok','=',False)]}">
                        <field name="description_sale" nolabel="1"/>
                    </group>
                </xpath> -->


                <xpath expr="//div[@name='options']" position="attributes">
                    <attribute name="attrs">{'invisible': True}</attribute>
                </xpath>
                <xpath expr="//field[@name='categ_id']" position="replace">
                    <field name="collana_id" options="{'no_create_edit': True}"/>
                    <field name="marchio_editoriale" />
                    <field name="book_type" />
                    <field name="data_uscita" />
                    <field name="in_magazzino" />
                    <field name="autori_id" widget="many2many_tags" placeholder="Autori..." options="{'no_create_edit': True}"/>
                    <field name="curatori_id" widget="many2many_tags" placeholder="Curatori..." options="{'no_create_edit': True}"/>
                    <field name="prefatori_id" widget="many2many_tags" placeholder="Prefatori..." options="{'no_create_edit': True}"/>
                    <field name="traduttori_id" widget="many2many_tags" placeholder="Traduttori..." options="{'no_create_edit': True}"/>
                    <field name="illustratori_id" widget="many2many_tags" placeholder="Illustratori..." options="{'no_create_edit': True}"/>
                    
                    <field name="numero_pagine"/>
                    <field name="categ_id"/>
                    
                </xpath>
                <xpath expr="//page[@name='sales']" position="attributes">
                         <attribute name="attrs">{'invisible': True}</attribute>
                </xpath>
                <xpath expr="//page[@name='invoicing']" position="attributes">
                         <attribute name="attrs">{'invisible': True}</attribute>
                </xpath>
            </field>
        </record>

       <record id="view_template_property_form2" model="ir.ui.view">
            <field name="name">product.template.stock.property.form.inherit2</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="stock.view_template_property_form" />
            <field name="arch" type="xml">
                <xpath expr="//page[@name='general_information']/following::page" position="attributes">
                         <attribute name="attrs">{'invisible': True}</attribute>
                </xpath>
            </field>
        </record>

        <record id="product_template_only_form_view_fltr6" model="ir.ui.view">
            <field name="name">product.template.product.form</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="arch" type="xml">
                <field name="default_code" position="attributes">
                    <attribute name="invisible">True</attribute>
                </field>
            </field>
        </record>

    <record id="product_template_search_view_custom" model="ir.ui.view">
        <field name="name">product.template.search</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_search_view" />
        <field name="arch" type="xml">
            
            <xpath expr="//filter[@name='services']" position="replace"/>
            <xpath expr="//filter[@name='consumable']" position="replace"/>
            <xpath expr="//filter[@name='filter_to_sell']" position="replace"/>
            
            
            <xpath expr="//filter[@name='inactive']" position="replace"/>

            <xpath expr="//filter[@name='filter_to_purchase']" position="replace">
                <separator/>
                <filter string="In Magazzino" name="magazzino" domain="[]" context="{'group_by': 'in_magazzino', 'search_default_in_magazzino':1}"/>
                <filter string="In Libreria" name="libreria" domain="[]" context="{'group_by': 'data_uscita:day', 'search_default_data_uscita':1}"/>
            </xpath>
            <field name="pricelist_id" position="after">
                <separator/>
                <field name="collana_id" widget="selection"/>
                <field name="autori_id" widget="selection"/>
            </field>
            <field name="name" position="after">
                <field name="autori_id"/>
            </field>
        </field>
    </record>

    <record id="view_stampa_product_template_tree" model="ir.ui.view">
        <field name="name">product.template.stampa.tree.inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_tree_view"/>
        <field name="priority" eval="0"/>
        <field name="arch" type="xml">

            <field name="default_code" position="before">
                <field name="marchio_editoriale"/>
                <field name="barcode"/>
                <field name="book_type"/>
            </field>

            <field name="default_code" position="attributes">
                <attribute name="invisible">True</attribute>
            </field>

            <field name="name" position="replace">
                <field name="name" string="Titolo"/>
            </field>
            <field name="name" position="before">
                <field name="data_uscita"/>
                <field name="in_magazzino"/>
                <field name="autori_id"/>
            </field>

            
            <field name="list_price" position="attributes">
                <attribute name="invisible">True</attribute>
            </field>
            <field name="standard_price" position="attributes">
                <attribute name="invisible">True</attribute>
            </field>
            <field name="uom_id" position="attributes">
                <attribute name="invisible">True</attribute>
            </field>
            <field name="categ_id" position="attributes">
                <attribute name="invisible">True</attribute>
            </field>
            <field name="type" position="attributes">
                <attribute name="invisible">True</attribute>
            </field>
        </field>
    </record>

        <record id="product.product_product_tree_view" model="ir.ui.view">
            <field name="name">product.product.tree</field>
            <field name="model">product.product</field>
            <field eval="7" name="priority"/>
            <field name="arch" type="xml">

                <tree string="Product Variants">
                    <field name="default_code"/>
                    <field name="barcode"/>
                    <field name="name"/>
                    <field name="data_uscita"/>
                    <field name="in_magazzino"/>
                    <field name="collana_id"/>
                    <field name="attribute_value_ids" widget="many2many_tags" groups="product.group_product_variant"/>
                    <field name="lst_price" invisible="1"/>
                    <field name="price" invisible="not context.get('pricelist',False)"/>
                    <field name="uom_id" options="{'no_open': True, 'no_create': True}" groups="product.group_uom"/>
                    <field name="product_tmpl_id" invisible="1"/>
                    <field name="active" invisible="1"/>

                </tree>
            </field>
        </record>

    <record id="product.product_template_action" model="ir.actions.act_window">
        <field name="name">Products</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">product.template</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="product.product_template_kanban_view"/>
        <field name="context">{"search_default_filter_to_sell":1}</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Click to define a new product.
            </p><p>
                You must define a product for everything you sell, whether it's a physical product, a consumable or a service you offer to customers.
            </p><p>
                The product form contains information to simplify the sale process: price, notes in the quotation, accounting data, procurement methods, etc.
            </p>
        </field>
    </record>

    <record id="stampa.view_stock_product_template_tree" model="ir.ui.view">
        <field name="name">product.template.stock.tree.inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="stock.view_stock_product_template_tree"/>
        <field name="arch" type="xml">
            <field name="virtual_available" position="attributes">
                <attribute name="invisible">True</attribute>
            </field>
            <field name="qty_available" position="attributes">
                <attribute name="invisible">True</attribute>
            </field>
            <field name="qty_available" position="before">
                <field name="qty_bookable"/>
            </field>
        </field>
    </record>

</odoo>